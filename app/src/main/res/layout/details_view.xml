<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView android:id="@+id/details_view_image"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:src="@drawable/detailplaceholder"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/details_view_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_view_name"/>
            <TextView android:id="@+id/details_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/details_view_label_dateAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_view_dateAdd"/>
            <TextView android:id="@+id/details_view_dateAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/details_view_label_primColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_view_primColor"/>
        <TextView android:id="@+id/details_view_primColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/details_view_label_secColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_view_secColor"/>
        <TextView android:id="@+id/details_view_secColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>